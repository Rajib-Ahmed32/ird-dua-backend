{
  "compilerOptions": {
    // Module & Target
    "module": "CommonJS",
    "target": "ES2020",

    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Type Checking
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Node.js types
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],

    // Other useful options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
